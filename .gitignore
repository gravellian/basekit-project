# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/
/web/core/


# Ignore configuration files that may contain sensitive information
/web/sites/*/*services*.yml

# Ignore sensitive information
# /web/sites/*/settings.php
/web/sites/*/settings.local.php

# Ignore Drupal's file directory
/web/sites/*/files/

# Ignore database files
*.sql
*.sql.gz

node_modules

# Ignore SimpleTest multi-site environment
/web/sites/simpletest

# Ignore files generated by common IDEs
/.idea/
/.vscode/
/.nova/
/*.code-workspace

# Ignore .env files as they are personal
/.env

# Ignore default text files
/web/INSTALL*.txt
/web/example.gitignore
/web/README.md
/web/sites/README.txt
/web/sites/example.sites.php
/web/sites/*/default.settings.php

# Local-only Composer overrides
composer.local.json
/composer.local.lock

# Ignored folders and files
/private/*
/web/robots.txt
/.editorconfig

# Ignore Composer-unpacked Drupal recipes (managed by drupal/core-recipe-unpack)
# Keep any local project recipes (e.g., recipes/site) tracked if you add them.
recipes/basekit-recipe/
recipes/*-recipe/
/.gitattributes
