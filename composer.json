{
  "name": "gravellian/basekit-project",
  "description": "BaseKit Drupal 11 site template (BaseKit theme + recipes + shared contrib deps)",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "homepage": "https://github.com/gravellian/basekit-project",
  "support": {
    "docs": "https://github.com/gravellian/basekit-docs",
    "chat": "https://www.drupal.org/node/314178"
  },
  "repositories": {
    "drupal": {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    "basekit": {
      "type": "vcs",
      "url": "git@github.com:gravellian/basekit.git",
      "no-api": true
    },
    "basekit-recipe": {
      "type": "vcs",
      "url": "git@github.com:gravellian/basekit-recipe.git",
      "no-api": true
    },
    "basekit-docs": {
      "type": "vcs",
      "url": "git@github.com:gravellian/basekit-docs.git",
      "no-api": true
    }
  },
  "require": {
    "composer/installers": "^2.3",
    "cweagans/composer-patches": "^1.7",
    "gravellian/basekit": "dev-main",
    "gravellian/basekit-recipe": "dev-main",
    "gravellian/basekit-docs": "dev-main",
    "drupal/admin_toolbar": "^3.6",
    "drupal/admin_toolbar_tools": "^3.6",
    "drupal/bg_image_formatter": "^1.18",
    "drupal/block_class": "^4.0",
    "drupal/config_split": "^2.0",
    "drupal/core-composer-scaffold": "^11.2",
    "drupal/core-project-message": "^11.2",
    "drupal/core-recipe-unpack": "^11.2",
    "drupal/core-recommended": "^11.2",
    "drupal/crop": "^2.5",
    "drupal/easy_breadcrumb": "^2.0",
    "drupal/eva": "3.1.x-dev@dev",
    "drupal/focal_point": "^2.1",
    "drupal/environment_indicator": "^4.0",
    "drupal/image_effects": "^4.1@beta",
    "drupal/inline_svg": "^1.0",
    "drupal/layout_builder_modal": "^2.0",
    "drupal/layout_builder_styles": "^2.1",
    "drupal/paragraphs": "^1.19",
    "drupal/pathauto": "^1.13",
    "drupal/prism": "^2.2",
    "drupal/profile": "^1.12",
    "drupal/responsive_favicons": "^4.0",
    "drupal/superfish": "^1.13",
    "drupal/svg_image": "^3.2",
    "drupal/swiper_formatter": "^2.0",
    "drupal/simple_sitemap": "^4.0@alpha",
    "drupal/token": "^1.13",
    "drupal/viewfield": "^3.0@beta",
    "drupal/viewsreference": "2.x-dev@dev",
    "drush/drush": "^13.6",
    "oomphinc/composer-installers-extender": "^2.0",
    "wikimedia/composer-merge-plugin": "^2.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "composer/installers": true,
      "cweagans/composer-patches": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupal/core-composer-scaffold": true,
      "drupal/core-recipe-unpack": true,
      "drupal/core-project-message": true,
      "oomphinc/composer-installers-extender": true,
      "php-http/discovery": true,
      "php-tuf/composer-integration": true,
      "phpstan/extension-installer": true,
      "wikimedia/composer-merge-plugin": true
    },
    "sort-packages": true,
    "preferred-install": {
      "gravellian/basekit": "source"
    }
  },
  "extra": {
    "merge-plugin": {
      "include": [
        "composer.local.json"
      ],
      "recurse": false,
      "replace": false,
      "ignore-duplicates": false
    },
    "patches-file": "patches/composer.patches.json",
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    },
    "installer-types": [
      "gravellian-docs"
    ],
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "web/themes/custom/basekit": [
        "gravellian/basekit"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/profiles/custom/{$name}": [
        "type:drupal-custom-profile"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "recipes/{$name}": [
        "type:drupal-recipe"
      ],
      "docs/": [
        "type:gravellian-docs"
      ]
    }
  },
  "require-dev": {
    "drupal/coder": "^8.3",
    "friendsofphp/php-cs-fixer": "^3.84",
    "squizlabs/php_codesniffer": "^3.13"
  }
}
